@using MovieWeb.Models
@model WishList
@{
    ViewBag.Title = "收藏夹";
}

<style>
    body {
        background-color: #080b12;
    }

    #wish_list {
        margin-top: 30px;
        border-radius: 8px;
    }

    .wish-item {
        display: flex;
        background-image: linear-gradient(to right,#8e9eab,#d7d2cc);
        height: 200px;
        border-bottom: 1px solid black;
        margin-bottom: 20px;
        border-radius: 8px;
    }

        .wish-item:last-child {
            border-bottom: 0;
        }

    .wish-movie-img {
        width: 160px;
        position: relative;
    }

        .wish-movie-img img {
            width: 100%;
            border-radius: 8px;
            border: 1px solid #f7f7f7;
        }

    .movie-img {
        width: 100%;
        position: relative;
        display: block;
    }

    .wish-text {
        margin-left: 20px;
        width: 100%;
        position: relative;
    }

        .wish-text h3 {
            font-weight: 700;
            line-height: 24px;
            color: black;
            text-align: left;
            margin: 15px 0;
        }

        .wish-text h4 {
            color: #2b2f4c;
            font-weight: 400;
            line-height: 24px;
            text-align: left;
            margin: 5px 0 10px 0;
        }

        .wish-text span {
            float: left;
            color: #2b2f4c;
            font-weight: 400;
            line-height: 24px;
            text-align: left;
            margin: 5px 0 10px 0;
        }

    .wish-delete-btn {
        position: absolute;
        top: 2px;
        right: 0;
        background: transparent;
        border: 0;
        font-size: 25px;
        color: #2b2f4c;
    }

        .wish-delete-btn:hover {
            color: dodgerblue;
        }

    .wish-item-detail {
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 2;
        font-size: 14px;
        width: 80%;
        height: 48px;
        line-height: 24px;
        color: #2b2f4c;
        text-align: left;
        overflow: hidden;
        margin-bottom: 20px;
    }
</style>

<div>
    <div class="container">
        <div class="col-lg-12 col-md-12">
            <h2>收藏夹</h2>
            <div id="wish_list">
                <div>
                    @if (Model.wishLists.Count == 0)
                    {
                        <h1 style="height:300px;text-align:center;padding-top:150px;">这里空空如也什么也没有~</h1>
                    }
                    @if (Model.wishLists.Count > 0)
                    {
                        foreach (var i in Model.wishLists)
                        {
                            <div class="wish-item">
                                <div class="wish-movie-img">
                                    <a href="@Url.Content("~/Movie/Index/"+i.movieID)" class="movie-img">
                                        <!--<img src="@i.movieImgPath" alt="">-->
                                        <img src="~/Content/mjx_package/image_test/01.jpg" height="200" />
                                    </a>
                                </div>
                                <div class="wish-text">
                                    <h3>@i.movieName</h3>
                                    <h4>简介&nbsp:</h4>
                                    <p class="wish-item-detail">@i.movieDetail</p>
                                    <span>上映时间&nbsp:&nbsp&nbsp</span><span>@i.upTime&nbsp&nbsp&nbsp&nbsp</span>
                                    <span>下线时间&nbsp:&nbsp&nbsp</span><span>@i.downTime&nbsp&nbsp&nbsp&nbsp</span>
                                    <span style="float:right;margin-right:30px;">收藏时间&nbsp:&nbsp&nbsp @i.wishTime</span>
                                    @using (Html.BeginForm("Index", "WishList", FormMethod.Post))
                                    {
                                        <input type="hidden" value=@i.movieID name="DeleteWishId" />
                                        <button type="submit" class="wish-delete-btn"><i class="uil uil-trash-alt"></i></button>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
